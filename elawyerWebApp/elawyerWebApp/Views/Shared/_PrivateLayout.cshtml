<!DOCTYPE html>
<html lang="en">
@using elawyerWebApp.Models;
@{
    User user = (User)Session["user"];
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="icon" href="~/Content/images/favicon.ico" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/Content/css/site.css" asp-append-version="true"/>
</head>

<body class="d-flex flex-column">
    <header>
        <nav class="navbar navbar-expand-lg main-bg main-fg fixed-top navbar-dark">
            <div class="container-fluid">
                <span class="col-1 sidenav-btn me-2 d-block d-lg-none" onclick="openNav()">&#9776;</span>
                <a class="navbar-brand main-fg d-none d-lg-block" href="@Url.Action("Index", "Public")">
                    <img src="~/Content/images/elawyer_logo_smll.png" alt="elawyer logo" width="30" height="30" class="d-inline-block align-text-top">
                </a>
                <div class="d-none d-lg-block">
                    <h4>
                        @DateTime.Now.ToString("dd/MM/yyyy")
                        <a href="@Url.Action("MyProfile", "Private")" class="main-fg ps-4 pe-4 text-decoration-none" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Mi Perfil">
                            <i class="bi bi-person-square"></i>
                        </a>
                        <a href="@Url.Action("LogOut", "Private")" class="main-fg pe-4 text-decoration-none" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Salir">
                            <i class="bi bi-box-arrow-left"></i>
                        </a>
                    </h4>
                </div>
            </div>
        </nav>
    </header>

    <!-- SUBNAV FOR LARGE SCREEN -->
    <div class="d-none d-lg-block">
        <ul class="nav subnav ps-5">
            <li class="nav-item">
                <a class="nav-link active" href="@Url.Action("Dashboard", "Private")">Mi Firma</a>
            </li>
            @if (user.NoRole == 1)
            {
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ListUser", "Private")">Usuarios</a>
                </li>
            }
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("ListIssue", "Private")">Asuntos</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("ListInvoice", "Private")">Facturas</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("ListClient", "Private")">Clientes</a>
            </li>
        </ul>
    </div>

    <!-- SIDENAV on small screens -->
    <div id="mySidenav" class="sidenav mt-5 d-block d-lg-none">
        <span href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</span>
        <a href="@Url.Action("Dashboard", "Private")"><i class="bi bi-building"></i> Mi Firma</a>
        @if (user.NoRole == 1)
        {
            <a href="@Url.Action("ListUser", "Private")"><i class="bi bi-people"></i> Usuarios</a>
        }
        <a href="@Url.Action("ListIssue", "Private")"><i class="bi bi-folder"></i> Asuntos</a>
        <a href="@Url.Action("ListInvoice", "Private")"><i class="bi bi-receipt-cutoff"></i> Facturas</a>
        <a href="@Url.Action("ListClient", "Private")"><i class="bi bi-person-video2"></i> Clientes</a>
        <a href="@Url.Action("MyProfile", "Private")"><i class="bi bi-person-square"></i> Mi Perfil</a>
        <a href="@Url.Action("LogOut", "Private")"><i class="bi bi-box-arrow-left"></i> Salir</a>
    </div>

    <main id="main" class="main">
        @RenderBody()
    </main>


    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/Content/js/site.js" asp-append-version="true"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
