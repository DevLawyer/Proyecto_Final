
@{
    ViewBag.Title = "LogIn";
}

<div class="row justify-content-center align-items-center vh-100">
    <div class="col-md-4 h-75">
        <div class="card rounded-0 main-bg main-fg">
            <div class="card-body text-center m-4">
                <h2 class="mb-4">ELAWYER</h2>
                <div id="spinner" class="spinner-border mb-2 visually-hidden" role="status"></div>
                <form id="loginForm" class="" action="~/Public/LogIn" method="post">
                    <input type="text" class="form-control mb-4 col" id="username" name="username" placeholder="Usuario">
                    <input type="password" class="form-control mb-4 col" id="password" name="password" placeholder="Contraseña">
                    <button type="submit" id="sendlogin" class="button" onclick="loading"><i class="bi bi-box-arrow-in-right"></i> Entrar</button>
                </form>
            </div>
            <div class="pb-2 text-center bg-transparent text-light">@ViewBag.Message</div>
        </div>
    </div>
</div>